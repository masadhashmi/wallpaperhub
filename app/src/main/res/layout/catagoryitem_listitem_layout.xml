<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:id="@+id/imageView_CatagoryImage"
android:background="@drawable/catagoryimage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="10dip"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_CatagoryTitle"
        android:layout_alignTop="@+id/imageView_CatagoryImage"
        android:layout_toRightOf="@+id/imageView_CatagoryImage"
        android:layout_toEndOf="@+id/imageView_CatagoryImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"

        android:id="@+id/textView_CatagoryCount"
        android:layout_below="@+id/textView_CatagoryTitle"
        android:layout_toRightOf="@+id/imageView_CatagoryImage"
        android:layout_toEndOf="@+id/imageView_CatagoryImage" />

</RelativeLayout>